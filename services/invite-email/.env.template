# === Supabase (service role access) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# === Resend / email sending ===
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=notifications@capmatch.com

# Test-mode toggles (safe to leave as-is for local/dev)
RESEND_TEST_MODE=true
RESEND_TEST_RECIPIENT=delivered@resend.dev   # optional; used when RESEND_TEST_MODE=true
RESEND_FORCE_TO_EMAIL=                       # optional; override all recipients

# When true, do not call Resend; just log the invite email subject/body and treat sends as successful.
INVITE_EMAIL_DRY_RUN=true

# === Invite template path (optional override) ===
# By default, service looks for /app/packages/email-templates/dist/invite-template.html
# For local dev, you may need: ../../packages/email-templates/dist/invite-template.html
INVITE_TEMPLATE_PATH=packages/email-templates/dist/invite-template.html

# === Polling configuration ===
# How often to poll for pending invites (in seconds)
POLL_INTERVAL_SECONDS=60

# === App base URL (for building accept-invite links) ===
APP_BASE_URL=https://www.capmatch.com

# === Logging ===
LOG_LEVEL=INFO

